<?xml version="1.0" encoding="utf-8"?>


<form>
<fieldset name="cot_admin.details"
		label="OBSERVATION_ADMIN_REPORT"
		printable="true"
		addfieldpath="/libraries/jdom/jform/fields"
		>
	<field name="id"
			alias="id"
			label="ID"
			filter="INT"
			description="ID_DESC"
			readonly="true"
			type="cktext"/>

			<!--References-->
			<field name="references"
					alias="references"
					label="REFERENCES"
					description="REFERENCES_DESC"
					readonly="true"
					type="cktext"/>
			<!--Location_ID-->
			<field name="id_location"
					alias="id_location"
					label="ID_LOCATION"
					filter="INT"
					description="ID_LOCATION_DESC"
					readonly="true"
					type="cktext"/>
<!--Observer contacts-->
	<field name="observer_name"
			alias="observer_name"
			label="OBSERVER_NAME"
			filter="STRING"
			description="OBSERVER_NAME_DESC"
			required="true"
			type="cktext"/>

	<field name="observer_tel"
			alias="observer_tel"
			label="OBSERVER_TEL"
			description="OBSERVER_TEL_DESC"
			type="tel"/>

	<field name="observer_email"
			alias="observer_email"
			label="OBSERVER_EMAIL"
			description="OBSERVER_EMAIL_DESC"
			type="email"/>

			<!--Informant contacts-->
			<field name="informant_name"
					alias="informant_name"
					label="INFORMANT_NAME"
					filter="STRING"
					description="INFORMANT_NAME_DESC"
					required="true"
					type="text"/>

			<field name="informant_tel"
					alias="informant_tel"
					label="INFORMANT_TEL"
					description="INFORMANT_TEL_DESC"
					type="tel"/>

			<field name="informant_email"
					alias="informant_email"
					label="INFORMANT_EMAIL"
					description="INFORMANT_EMAIL_DESC"
					type="email"/>

	<field name="observation_datetime"
			alias="observation_datetime"
			class="form-control form-calendar"
			label="OBSERVATION_DATE"
			description="OBSERVATION_DATE_DESC"
			hint="OBSERVATION_DATE"
			type="ckcalendar"
            default="NOW"
            format="Y-m-d"/>
