			type="cktext"/>

	<field name="observation_day"
			alias="observation_day"
			label="OBSERVATION_DAY"
			description="OBSERVATION_DAY_DESC"
			type="cktext"/>

	<field name="observation_month"
			alias="observation_month"
			label="OBSERVATION_MONTH"
			description="OBSERVATION_MONTH_DESC"
			type="cktext"/>

	<field name="observation_year"
			alias="observation_year"
			label="OBSERVATION_YEAR"
			description="OBSERVATION_CULLED_DESC"
			type="cktext"/>
-->
		<field name="observation_location"
			alias="observation_location"
			label="OBSERVATION_LOCATION"
			filter="STRING"
			description="OBSERVATION_LOCATION_DESC"
			type="cktextarea"/>

		<field name="observation_localisation"
				alias="observation_localisation"
				label="OBSERVATION_PICK"
				description="OBSERVATION_PICK_DESC"
				filter="STRING"
				mode="modal"
				class="formatted_address"
				type="ckaddresspicker"/>

		<field name="observation_region"
				alias="region"
				label="OBSERVATION_REGION"
				description="OBSERVATION_REGION_DESC"
				filter="STRING"
				class="region"
				type="cktext"/>

		<field name="observation_country"
				alias="country"
				label="OBSERVATION_COUNTRY"
				description="OBSERVATION_COUNTRY_DESC"
				filter="STRING"
				class="country"
				type="cktext"/>

		<field name="observation_country_code"
				alias="country_code"
				label="OBSERVATION_COUNTRY_CODE"
				description="OBSERVATION_COUNTRY_CODE_DESC"
				filter="STRING"
				class="country_code"
				type="cktext"
				/>

		<field name="observation_latitude"
				alias="latitude"
				label="OBSERVATION_LATITUDE"
				description="OBSERVATION_LATITUDE_DESC"
				filter="FLOAT"
				class="latitude"
				type="cktext"/>

		<field name="observation_longitude"
				alias="longitude"
				label="OBSERVATION_LONGITUDE"
				description="OBSERVATION_LONGITUDE_DESC"
				filter="FLOAT"
				class="longitude"
				type="cktext"/>

<!--Number-->
	<field name="observation_number"
			alias="observation_number"
			label="OBSERVATION_NUMBER"
			description="OBSERVATION_NUMBER_DESC"
			labelclass="control-label"
			type="cktext"/>
			<!--Spaces-->
				 <field name="observation_spaces"
					 alias="observation_spaces"
					 label="OBSERVATION_SPACES"
					 description="OBSERVATION_SPACES_DESC"
					 labelclass="control-label"
					 type="text"/>
					 <!--Spaces identification-->
	 				<field name="observation_spaces_identification"
	 						alias="observation_spaces_identification"
	 						label="OBSERVATION_SPACES_IDENTIFICATION"
	 						description="OBSERVATION_SPACES_IDENTIFICATION_DESC"
	 						type="radio"
	 						required="true" >
	 					<option value="probable">OBSERVATION_SPACES_IDENTIFICATION_A</option>
	 					<option value="certain">OBSERVATION_SPACES_IDENTIFICATION_B</option>
	 				</field>
					<!--Sex-->
					<field name="observation_sex"
								 alias="observation_sex"
								 label="OBSERVATION_SEX"
									description="OBSERVATION_SEX_DESC"
									type="radio"
									required="true"
									multiple="false" >
								<option value="mâle">OBSERVATION_SEX_A</option>
								<option value="femelle">OBSERVATION_SEX_B</option>
								<option value="inconnu">OBSERVATION_SEX_C</option>
							</field>
							<!--Color-->
							<field name="observation_color"
									alias="observation_color"
									label="OBSERVATION_COLOR"
									labelclass="control-label"
									description="OBSERVATION_COLOR_DESC"
									type="text"/>
					<!--Size-->
								<field name="observation_size"
										alias="observation_size"
										label="OBSERVATION_SIZE"
										labelclass="control-label"
										description="OBSERVATION_SIZE_DESC"
										required="true"
										type="text"/>
							<!--Abnormalities-->
							<field name="observation_abnormalities"
									alias="observation_abnormalities"
									label="OBSERVATION_ABNORMALITIES"
									description="OBSERVATION_ABNORMALITIES_DESC"
									type="radio"
									required="true"
									multiple="false" >
								<option value="oui">JYES</option>
								<option value="non">JNO</option>
							</field>
							<!--Capture traces-->
							<field name="observation_capture_traces"
									alias="observation_capture_traces"
									label="OBSERVATION_CAPTURE_TRACES"
									description="OBSERVATION_CAPTURE_TRACES_DESC"
									type="radio"
									required="true" >
								<option value="probable">OBSERVATION_CAPTURE_TRACES_A</option>
								<option value="certaine">OBSERVATION_CAPTURE_TRACES_B</option>
							</field>
							<!--Catch indices-->
							<field name="catch_indices"
									alias="catch_indices"
									label="CATCH_INDICES"
									filter="STRING"
									description="CATCH_INDICES_DESC"
									type="textarea"/>
							<!--State-->
							<field name="observation_state"
									alias="observation_state"
									label="OBSERVATION_STATE"
									description="OBSERVATION_STATE_DESC"
									type="radio"
									required="true" >
								<option value="mort">OBSERVATION_STATE_A</option>
								<option value="vivant">OBSERVATION_STATE_B</option>
							</field>
							<!--Death-->
							<field name="observation_death"
									alias="observation_death"
									label="OBSERVATION_DEATH"
									description="OBSERVATION_DEATH_DESC"
									type="radio" >
								<option value="animal mort avant mon arrivée">OBSERVATION_DEATH_A</option>
								<option value="animal mort pendant mon intervention">OBSERVATION_DEATH_B</option>
								<option value="animal euthanasié">OBSERVATION_DEATH_C</option>
							</field>
							<!--Date death-->
						<field name="observation_datetime_death"
								alias="observation_datetime_death"
								label="OBSERVATION_DATE_DEATH"
								description="OBSERVATION_DATE_DEATH_DESC"
								type="ckcalendar"
											default="NOW"
											format="Y-m-d"/>
							<!--State decomposition-->
							<field name="observation_state_decomposition"
									alias="observation_state_decomposition"
									label="OBSERVATION_STATE_DECOMPOSITION"
									description="OBSERVATION_STATE_DECOMPOSITION_DESC"
									type="radio">
								<option value="très frais">OBSERVATION_STATE_DECOMPOSITION_A</option>
								<option value="frais">OBSERVATION_STATE_DECOMPOSITION_B</option>
								<option value="putréfié">OBSERVATION_STATE_DECOMPOSITION_D</option>
								<option value="très putréfié">OBSERVATION_STATE_DECOMPOSITION_D</option>
								<option value="restes">OBSERVATION_STATE_DECOMPOSITION_E</option>
							</field>
							<!--Levies protocole-->
						<field name="levies_protocole"
								alias="levies_protocole"
								label="LEVIES_PROTOCOL"
								description="LEVIES_PROTOCOL"
								type="radio">
							<option value="standard">LEVIES_PROTOCOL_A</option>
							<option value="intermédiaire">LEVIES_PROTOCOL_B</option>
							<option value="complet">LEVIES_PROTOCOL_C</option>
						</field>
							<!--Alive-->
							<field name="observation_alive"
									alias="observation_alive"
									label="OBSERVATION_ALIVE"
									description="OBSERVATION_ALIVE_DESC"
									type="checkboxes" >
								<option value="animal remis à l'eau">OBSERVATION_ALIVE_A</option>
							</field>
											<!--Date release-->
										<field name="observation_datetime_release"
												alias="observation_datetime_release"
												label="OBSERVATION_DATE_RELEASE"
												description="OBSERVATION_DATE_RELEASE_DESC"
												type="ckcalendar"
															default="NOW"
															format="Y-m-d"/>


<!--	<field name="observation_culled"
			alias="observation_culled"
			label="OBSERVATION_CULLED"
			labelclass="control-label"
			description="OBSERVATION_CULLED_DESC"
			type="cktext"/>

	<field name="observation_method"
			alias="observation_method"
			label="OBSERVATION_METHOD"
			description="OBSERVATION_METHOD_DESC"
			type="checkboxes"
			required="true"
			multiple="true" >
		<option value="snorkelling">Snorkelling</option>
		<option value="scuba diving">Scuba diving</option>
	</field>

	<field name="counting_method_timed_swim"
			alias="counting_method_timed_swim"
			type="cktext"
			labelclass="control-label"
			label="COUNTING_METHOD_TIMED_SWIM"
			description="COUNTING_METHOD_TIMED_SWIM_DESC"/>

	<field name="counting_method_distance_swim"
			alias="counting_method_distance_swim"
			type="cktext"
			labelclass="control-label"
			label="COUNTING_METHOD_DISTANCE_SWIM"
			description="COUNTING_METHOD_DISTANCE_SWIM_DESC"/>

	<field name="counting_method_other"
			alias="counting_method_other"
			type="cktext"
			labelclass="control-label"
			label="COUNTING_METHOD_OTHER"
			description="COUNTING_METHOD_OTHER_DESC"/>

	<field name="depth_range"
			alias="depth_range"
			label="depth_range"
			description="depth_range_DESC"
			type="checkboxes"
			required="true"
			multiple="true" >
		<option value="shallow">Shallow (less than 2m)</option>
		<option value="medium">Medium (2-10m)</option>
		<option value="deep">Deep (more than 10m)</option>
	</field>
	<field name="observation_state"
			alias="observation_state"
			label="OBSERVATION_STATE"
			description="OBSERVATION_STATE_DESC"
			size="1"
			type="cklist"
			autocomplete="off"
			nullLabel="OBSERVATION_LIST_NULL"
			>
		<option value="death">OBSERVATION_STATE_A</option>
		<option value="alive">OBSERVATION_STATE_B</option>
	</field>
-->

	<field name="remarks"
			alias="remarks"
			label="REMARKS"
			filter="STRING"
			description="REMARKS_DESC"
			type="cktextarea"/>


	<field name="admin_validation"
			alias="admin_validation"
			label="ADMIN_VALIDATION"
			labelclass="control-label"
			description="ADMIN_VALIDATION_DESC"
			type="checkbox"
			required="true"/>



</fieldset>
</form>
