<?xml version="1.0" encoding="utf-8"?>


<form>
<fieldset 	name="stranding_admin.details"
			label="OBSERVATION_ADMIN_REPORT"
			printable="true"
			addfieldpath="/libraries/jdom/jform/fields">

	<!--Id-->
	<field 	name="id"
		   	alias="id"
		   	label="ID"
			filter="INT"
			description="ID_DESC"
			readonly="true"
			type="cktext"/>

	<!--Location_ID-->
	<field 	name="id_location"
			alias="id_location"
			label="ID_LOCATION"
			filter="INT"
			description="ID_LOCATION_DESC"
			readonly="true"
			type="cktext"/>

	<!--Observer contacts-->
	<field 	name="observer_name"
			alias="observer_name"
			label="OBSERVER_NAME"
			filter="STRING"
			description="OBSERVER_NAME_DESC"
			required="true"
			type="cktext"/>
	<field name="observer_address"
			alias="observer_address"
			label="OBSERVER_ADDRESS"
			filter="STRING"
			description="OBSERVER_ADDRESS_DESC"
			type="text"/>
	<field 	name="observer_tel"
			alias="observer_tel"
			label="OBSERVER_TEL"
			description="OBSERVER_TEL_DESC"
			type="tel"/>
	<field 	name="observer_email"
			alias="observer_email"
			label="OBSERVER_EMAIL"
			description="OBSERVER_EMAIL_DESC"
			type="email"/>

	<!--Informant contacts-->
	<field 	name="informant_name"
			alias="informant_name"
			label="INFORMANT_NAME"
			filter="STRING"
			description="INFORMANT_NAME_DESC"
			required="true"
			type="text"/>
	<field name="informant_address"
			alias="informant_address"
			label="INFORMANT_ADDRESS"
			filter="STRING"
			description="INFORMANT_ADDRESS_DESC"
			type="text"/>
	<field 	name="informant_tel"
			alias="informant_tel"
			label="INFORMANT_TEL"
			description="INFORMANT_TEL_DESC"
			type="tel"/>
	<field 	name="informant_email"
			alias="informant_email"
			label="INFORMANT_EMAIL"
			description="INFORMANT_EMAIL_DESC"
			type="email"/>

	<!--Date-->
	<field 	name="observation_datetime"
			alias="observation_datetime"
			class="form-control form-calendar"
			label="OBSERVATION_DATE"
			description="OBSERVATION_DATE_DESC"
			hint="OBSERVATION_DATE"
			type="ckcalendar"
            default="NOW"
            format="Y-m-d"/>
<!--
	<field name="observation_date"
			alias="observation_date"
			label="OBSERVATION_DATE"
			description="OBSERVATION_DATE_DESC"
			type="cktext"/>

	<field name="observation_day"
			alias="observation_day"
			label="OBSERVATION_DAY"
			description="OBSERVATION_DAY_DESC"
			type="cktext"/>

	<field name="observation_month"
			alias="observation_month"
			label="OBSERVATION_MONTH"
			description="OBSERVATION_MONTH_DESC"
			type="cktext"/>

	<field name="observation_year"
			alias="observation_year"
			label="OBSERVATION_YEAR"
			description="OBSERVATION_YEAR_DESC"
			type="cktext"/>
-->
	<!--Position-->
	<field 	name="observation_location"
			alias="observation_location"
			label="OBSERVATION_LOCATION"
			filter="STRING"
			description="OBSERVATION_LOCATION_DESC"
			type="cktextarea"/>
	<field 	name="observation_localisation"
			alias="observation_localisation"
			label="OBSERVATION_PICK"
			description="OBSERVATION_PICK_DESC"
			filter="STRING"
			mode="modal"
			class="formatted_address"
			type="ckaddresspicker"/>
	<field 	name="observation_region"
			alias="region"
			label="OBSERVATION_REGION"
			description="OBSERVATION_REGION_DESC"
			filter="STRING"
			class="region"
			type="cktext"/>
	<field 	name="observation_country"
			alias="country"
			label="OBSERVATION_COUNTRY"
			description="OBSERVATION_COUNTRY_DESC"
			filter="STRING"
			class="country"
			type="cktext"/>
	<field 	name="observation_country_code"
			alias="country_code"
			label="OBSERVATION_COUNTRY_CODE"
			description="OBSERVATION_COUNTRY_CODE_DESC"
			filter="STRING"
			class="country_code"
			type="cktext"/>
	<field 	name="observation_latitude"
			alias="latitude"
			label="OBSERVATION_LATITUDE"
			description="OBSERVATION_LATITUDE_DESC"
			filter="FLOAT"
			class="latitude"
			type="cktext"/>
	<field 	name="observation_longitude"
			alias="longitude"
			label="OBSERVATION_LONGITUDE"
			description="OBSERVATION_LONGITUDE_DESC"
			filter="FLOAT"
			class="longitude"
			type="cktext"/>
	<!--Commune-->
	<field name="observation_commune"
			alias="commune"
			label="OBSERVATION_COMMUNE"
			description="OBSERVATION_COMMUNE_DESC"
			filter="STRING"
			class="commune"
			type="text"
			required="true"/>

	<!--Stranding type-->
	<field 	name="observation_stranding_type"
			alias="observation_stranding_type"
			label="OBSERVATION_STRANDING_TYPE"
			description="OBSERVATION_STRANDING_TYPE_DESC"
			type="radio"
			required="true" >
			<option value="isolé">OBSERVATION_STRANDING_TYPE_A</option>
			<option value="en masse">OBSERVATION_STRANDING_TYPE_B</option>
	</field>

	<!--Number-->
	<field 	name="observation_number"
			alias="observation_number"
			label="OBSERVATION_NUMBER"
			description="OBSERVATION_NUMBER_DESC"
			labelclass="control-label"
			type="number"
			min="0"
			max="500"
			required="true"/>

	<!--Spaces-->
	<field 	name="observation_spaces"
		 	alias="observation_spaces"
		 	label="OBSERVATION_SPACES_LABEL"
		 	description="OBSERVATION_SPACES_DESC"
		 	labelclass="control-label"
		 	type="text"
		 	required="true"/>

 	<!--Spaces identification-->
	<field 	name="observation_spaces_identification"
			alias="observation_spaces_identification"
			label="OBSERVATION_SPACES_IDENTIFICATION"
			description="OBSERVATION_SPACES_IDENTIFICATION_DESC"
			type="radio"
			required="true" >
			<option value="probable">OBSERVATION_SPACES_IDENTIFICATION_A</option>
			<option value="certain">OBSERVATION_SPACES_IDENTIFICATION_B</option>
			<option value="inconnu">OBSERVATION_SPACES_IDENTIFICATION_C</option>
	</field>

	<!--Sex-->
	<field 	name="observation_sex"
		 	alias="observation_sex"
		 	label="OBSERVATION_SEX"
			description="OBSERVATION_SEX_DESC"
			type="radio"
			required="true"
			multiple="false" >
			<option value="M">OBSERVATION_SEX_A</option>
			<option value="F">OBSERVATION_SEX_B</option>
			<option value="inconnu">OBSERVATION_SEX_C</option>
	</field>

	<!--Encoche médiane à la caudale-->
	<field name="observation_caudal"
			alias="observation_caudal"
			label="OBSERVATION_CAUDAL"
			description="OBSERVATION_CAUDAL_DESC"
			type="radio"
			required="true" >
			<option value="présente">OBSERVATION_CAUDAL_A</option>
			<option value="absente">OBSERVATION_CAUDAL_B</option>
			<option value="inconnu">OBSERVATION_CAUDAL_C</option>
	</field>

	<!--Bec-->
	<field name="observation_beak"
			alias="observation_beak"
			label="OBSERVATION_BEAK"
			description="OBSERVATION_BEAK_DESC"
			type="checkboxes">
			<option value="bec">OBSERVATION_BEAK_A</option>
	</field>

	<!--Sillons-->
	<field name="observation_furrows"
			alias="observation_furrows"
			label="OBSERVATION_FURROWS"
			description="OBSERVATION_FURROWS_DESC"
			type="checkboxes">
			<option value="Bec">OBSERVATION_FURROWS</option>
	</field>

	<!--Tooth-->
	<field name="nb_teeth_upper_right"
			 alias="nb_teeth_upper_right"
			 label="OBSERVATION_UPPER_RIGHT"
			 description="OBSERVATION_UPPER_RIGHT_DESC"
			 labelclass="control-label"
			 type="text"/>
	<field name="nb_teeth_upper_left"
			 alias="nb_teeth_upper_left"
			 label="OBSERVATION_UPPER_LEFT"
			 description="OBSERVATION_UPPER_LEFT_DESC"
			 labelclass="control-label"
			 type="text"/>
	<field name="nb_teeth_lower_right"
			 alias="nb_teeth_lower_right"
			 label="OBSERVATION_LOWER_RIGHT"
			 description="OBSERVATION_LOWER_RIGHT_DESC"
			 labelclass="control-label"
			 type="text"/>
	<field name="nb_teeth_lower_left"
			 alias="nb_teeth_lower_left"
			 label="OBSERVATION_LOWER_LEFT"
			 description="OBSERVATION_LOWER_LEFT_DESC"
			 labelclass="control-label"
			 type="text"/>
	<field name="observation_teeth_base_diametre"
			alias="observation_teeth_base_diametre"
			label="OBSERVATION_BASE_DIAMETRE_LBL"
			labelclass="control-label"
			description="OBSERVATION_BASE_DIAMETRE_DESC"
			type="text"/>

	<!--Baleen-->
	<field name="observation_baleen_color"
			alias="observation_baleen_color"
			label="OBSERVATION_BALEEN_COLOR"
			labelclass="control-label"
			description="OBSERVATION_BALEEN_COLOR_DESC"
			type="text"/>
	<field name="observation_baleen_height"
			alias="observation_baleen_height"
			label="OBSERVATION_BALEEN_HEIGHT"
			labelclass="control-label"
			description="OBSERVATION_BALEEN_HEIGHT_DESC"
			type="text"/>
	<field name="observation_baleen_base_height"
			alias="observation_baleen_base_height"
			label="OBSERVATION_BALEEN_BASE_DIAMETRE"
			labelclass="control-label"
			description="OBSERVATION_BALEEN_BASE_DIAMETRE_DESC"
			type="text"/>

	<!--Defenses-->
	<field name="observation_defenses"
			alias="observation_defenses"
			label="OBSERVATION_DEFENSES"
			labelclass="control-label"
			description="OBSERVATION_DEFENSES_DESC"
			type="checkboxes">
			<option value="defenses">OBSERVATION_DEFENSES</option>
	</field>

	<!--Color-->
	<field 	name="observation_color"
			alias="observation_color"
			label="OBSERVATION_COLOR"
			labelclass="control-label"
			description="OBSERVATION_COLOR_DESC"
			type="text"/>

	<!--Size-->
	<field 	name="observation_size"
			alias="observation_size"
			label="OBSERVATION_SIZE"
			labelclass="control-label"
			description="OBSERVATION_SIZE_DESC"
			type="number"
			min="0"
			max="100"
			required="true"/>

	<!--Size precision-->
	<field name="observation_size_precision"
			alias="observation_size_precision"
			label="OBSERVATION_SIZE_PRECISION"
			labelclass="control-label"
			description="OBSERVATION_SIZE_PRECISION_DESC"
			type="radio"
			required="true">
			<option value="1">OBSERVATION_SIZE_PRECISION_A</option>
			<option value="2">OBSERVATION_SIZE_PRECISION_B</option>
	</field>

	<!--Abnormalities-->
	<field 	name="observation_abnormalities"
			alias="observation_abnormalities"
			label="OBSERVATION_ABNORMALITIES"
			description="OBSERVATION_ABNORMALITIES_DESC"
			type="radio"
			required="true" >
			<option value="oui">OBSERVATION_ABNORMALITIES_A</option>
			<option value="non">OBSERVATION_ABNORMALITIES_B</option>
			<option value="inconnu">OBSERVATION_ABNORMALITIES_C</option>
	</field>

	<!--Capture traces-->
	<field 	name="observation_capture_traces"
			alias="observation_capture_traces"
			label="OBSERVATION_CAPTURE_TRACES"
			description="OBSERVATION_CAPTURE_TRACES_DESC"
			type="radio"
			required="true" >
			<option value="probable">OBSERVATION_CAPTURE_TRACES_A</option>
			<option value="certaine">OBSERVATION_CAPTURE_TRACES_B</option>
			<option value="inconnu">OBSERVATION_CAPTURE_TRACES_C</option>
	</field>

	<!--Catch indices-->
	<field 	name="catch_indices"
			alias="catch_indices"
			label="CATCH_INDICES"
			filter="STRING"
			description="CATCH_INDICES_DESC"
			type="textarea"/>

	<!--Death-->
	<field 	name="observation_death"
			alias="observation_death"
			label="OBSERVATION_DEATH"
			description="OBSERVATION_DEATH_DESC"
			type="radio" >
			<option value="mort avant l'arrivée de l'observateur">OBSERVATION_DEATH_A</option>
			<option value="mort pendant l'intervention de l'observateur">OBSERVATION_DEATH_B</option>
			<option value="euthanasié">OBSERVATION_DEATH_C</option>
	</field>

	<!--Date death-->
	<field 	name="observation_datetime_death"
			alias="observation_datetime_death"
			label="OBSERVATION_DATE_DEATH"
			description="OBSERVATION_DATE_DEATH_DESC"
			type="ckcalendar"
			format="Y-m-d"/>

	<!--State decomposition-->
	<field 	name="observation_state_decomposition"
			alias="observation_state_decomposition"
			label="OBSERVATION_STATE_DECOMPOSITION"
			description="OBSERVATION_STATE_DECOMPOSITION_DESC"
			type="radio">
			<option value="très frais">OBSERVATION_STATE_DECOMPOSITION_A</option>
			<option value="frais">OBSERVATION_STATE_DECOMPOSITION_B</option>
			<option value="putréfié">OBSERVATION_STATE_DECOMPOSITION_D</option>
			<option value="très putréfié">OBSERVATION_STATE_DECOMPOSITION_D</option>
			<option value="restes">OBSERVATION_STATE_DECOMPOSITION_E</option>
	</field>

	<!--Alive-->
	<field 	name="observation_alive"
			alias="observation_alive"
			label="OBSERVATION_ALIVE"
			description="OBSERVATION_ALIVE_DESC"
			type="checkboxes" 
			multiple="false">
			<option value="animal remis à l'eau">OBSERVATION_ALIVE_A</option>
	</field>

	<!--Date release-->
	<field 	name="observation_datetime_release"
			alias="observation_datetime_release"
			label="OBSERVATION_DATE_RELEASE"
			description="OBSERVATION_DATE_RELEASE_DESC"
			type="ckcalendar"
			format="Y-m-d"/>

	<!--Levies protocole-->
	<field 	name="levies_protocole"
			alias="levies_protocole"
			label="LEVIES_PROTOCOL"
			description="LEVIES_PROTOCOL"
			type="radio">
			<option value="standard">LEVIES_PROTOCOL_A</option>
			<option value="intermédiaire">LEVIES_PROTOCOL_B</option>
			<option value="complet">LEVIES_PROTOCOL_C</option>
	</field>

	<!--Tissue removal-->
	<field name="observation_tissue_removal"
			alias="observation_tissue_removal"
			label="OBSERVATION_TISSUE_REMOVAL"
			description="OBSERVATION_TISSUE_REMOVAL_DESC"
			type="checkboxes"
			multiple="true" 
			required="true">
			<option value="peau">OBSERVATION_TISSUE_REMOVAL_A</option>
			<option value="dents">OBSERVATION_TISSUE_REMOVAL_B</option>
			<option value="parasites">OBSERVATION_TISSUE_REMOVAL_C</option>
			<option value="muscle">OBSERVATION_TISSUE_REMOVAL_D</option>
			<option value="rein">OBSERVATION_TISSUE_REMOVAL_E</option>
			<option value="foi">OBSERVATION_TISSUE_REMOVAL_F</option>
			<option value="contenu stomacal">OBSERVATION_TISSUE_REMOVAL_G</option>
			<option value="autres prélèvements avancés">OBSERVATION_TISSUE_REMOVAL_H</option>
	</field>

	<!--Stockage location-->
	<field name="observation_location_stock"
			alias="observation_location_stock"
			label="OBSERVATION_LOCATION_STOCK"
			labelclass="control-label"
			description="OBSERVATION_LOCATION_STOCK_DESC"
			type="text"
			required="true"/>

	<!--Remarks-->
	<field 	name="remarks"
			alias="remarks"
			label="REMARKS"
			filter="STRING"
			description="REMARKS_DESC"
			type="cktextarea"/>

	<!--Admin validation-->
	<field 	name="admin_validation"
			alias="admin_validation"
			label="ADMIN_VALIDATION"
			labelclass="control-label"
			description="ADMIN_VALIDATION_DESC"
			type="checkbox"
			required="true"/>



</fieldset>
</form>
